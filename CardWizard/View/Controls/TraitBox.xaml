<UserControl x:Name="userControl" x:Class="CardWizard.View.TraitBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardWizard.View"
             Focusable="True"
             xmlns:System="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignWidth="144" d:DesignHeight="52"
             Foreground="{DynamicResource ButtonForeground}" BorderBrush="{DynamicResource MenuBackground}" >
    <UserControl.Resources>
        <Style x:Key="XInput" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{Binding Foreground, ElementName=userControl}"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="InputScope" Value="Number"/>
            <Setter Property="MaxLength"  Value="4"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="36"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <SolidColorBrush x:Key="BorderBackground" Color="Transparent"/>
        </Grid.Resources>
        <Border x:Name="BorderForValue" Grid.Column="1" Grid.RowSpan="2" 
                BorderThickness="2,2,1,2" 
                BorderBrush="{DynamicResource MenuBackground}" Background="{DynamicResource BorderBackground}"/>
        <Border x:Name="BorderForHalf" Grid.Column="2" CornerRadius="0,10,0,0" 
                BorderThickness="1,2,2,1" 
                BorderBrush="{DynamicResource MenuBackground}" Background="{DynamicResource BorderBackground}"/>
        <Border x:Name="BorderForOneFifth" Grid.Column="2" Grid.Row="1" 
                BorderThickness="1,1,2,2" 
                BorderBrush="{DynamicResource MenuBackground}" Background="{DynamicResource BorderBackground}"/>
        <Border x:Name="BorderForSingle" Visibility="Hidden" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" 
                BorderThickness="2,2,2,2" CornerRadius="16,16,16,16" 
                BorderBrush="{DynamicResource MenuBackground}" Background="{DynamicResource BorderBackground}"/>
        <Label x:Name="Label_Value" 
                 InputScope="Number" Grid.RowSpan="2" Grid.Column="1" 
                 FontSize="22" HorizontalContentAlignment="Center" 
                 Style="{DynamicResource XLabel}" BorderBrush="{x:Null}" 
                 Background="{x:Null}" Foreground="{Binding Foreground, ElementName=userControl}" 
               FontWeight="Bold" Margin="0,0,0,0">100</Label>
        <Label x:Name="Label_ValueHalf" InputScope="Number" Grid.Column="2" 
               Style="{DynamicResource XLabel}" FontSize="14" Padding="0,0,0,0">50</Label>
        <Label x:Name="Label_ValueOneFifth" InputScope="Number" Grid.Row="1" 
               Grid.Column="2" Style="{DynamicResource XLabel}" FontSize="14" Padding="0,0,0,0">20</Label>
        <TextBlock x:Name="Block_Key" Style="{DynamicResource GeneralTextBlock}" Grid.RowSpan="2" FontSize="10" TextWrapping="WrapWithOverflow">
            <Run>属性</Run><LineBreak/>
            <Run>PROP</Run><LineBreak/>
            <Run>副属性</Run><LineBreak/>
            <Run>PROP</Run>
        </TextBlock>
        <Grid x:Name="EditGrid"
              Grid.RowSpan="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Thickness x:Key="XLabelPadding">0,0,0,0</Thickness>
                <Thickness x:Key="XLabelMargin">0,0,0,0</Thickness>
                <System:Double x:Key="InputLabelFontSize">11</System:Double>
            </Grid.Resources>
            <Label x:Name="Label_Initial" Tag="Initial" 
                   Content="初始" Grid.Row="0" 
                   Style="{DynamicResource XLabel}" FontSize="{DynamicResource InputLabelFontSize}" Margin="{DynamicResource XLabelMargin}" Padding="{DynamicResource XLabelPadding}"/>
            <Label x:Name="Label_Adjustment" Tag="Adjustment" 
                   Content="调整" Grid.Row="1"
                   Style="{DynamicResource XLabel}" FontSize="{DynamicResource InputLabelFontSize}" Margin="{DynamicResource XLabelMargin}" Padding="{DynamicResource XLabelPadding}"/>
            <Label x:Name="Label_Growth" Tag="Growth" 
                   Content="成长" Grid.Row="2"
                   Style="{DynamicResource XLabel}" FontSize="{DynamicResource InputLabelFontSize}" Margin="{DynamicResource XLabelMargin}" Padding="{DynamicResource XLabelPadding}"/>
            <TextBox x:Name="Text_Initial" Style="{DynamicResource XInput}" Grid.Column="1">100</TextBox>
            <TextBox x:Name="Text_Adjustment" Style="{DynamicResource XInput}" Grid.Row="1" Grid.Column="1">100</TextBox>
            <TextBox x:Name="Text_Growth" Style="{DynamicResource XInput}" Grid.Row="2" Grid.Column="1">100</TextBox>
        </Grid>
    </Grid>
</UserControl>
